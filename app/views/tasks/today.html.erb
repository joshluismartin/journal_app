<h1>Today's Tasks</h1>
<% if @tasks.any? %>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Category</th>
        <th>Completed</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.title %></td>
          <td><%= task.category.name if task.category %></td>
          <td><%= task.completed ? "Yes" : "No" %></td>
          <td><%= link_to 'Show', task_path(task), class: "btn btn-info btn-sm" %></td>
          <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-warning btn-sm" %></td>
          <td><%= link_to 'Delete', task_path(task), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No tasks for today!</p>
<% end %>
