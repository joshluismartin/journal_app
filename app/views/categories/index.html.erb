<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0">Your Categories</h1>
  <%= link_to new_category_path, class: 'btn btn-primary' do %>
    <i class="bi bi-plus-circle me-1"></i> New Category
  <% end %>
</div>

<div class="card shadow-sm">
  <div class="table-responsive">
    <table class="table table-striped table-hover mb-0">
      <thead class="table-light">
        <tr>
          <th>Name</th>
          <th>Tasks</th>
          <th class="text-center">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if @categories.any? %>
          <% @categories.each do |category| %>
            <tr>
              <td class="align-middle fw-medium">
                <span class="badge rounded-pill bg-light text-dark border px-3 py-2 fs-6">
                  <%= category.name %>
                </span>
              </td>
              <td class="align-middle">
                <%= category.tasks.count %> task<%= category.tasks.count != 1 ? 's' : '' %>
              </td>
              <td class="align-middle text-center">
                <div class="btn-group btn-group-sm">
                  <%= link_to category_path(category), class: 'btn btn-outline-info', title: "View details" do %>
                    <i class="bi bi-eye"></i>
                  <% end %>
                  <%= link_to edit_category_path(category), class: 'btn btn-outline-warning', title: "Edit category" do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                  <%= link_to category_path(category),
                      data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this category?' }, 
                      class: "btn btn-outline-danger", title: "Delete category" do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="3" class="text-center py-4 text-muted">
              <i class="bi bi-folder-x fs-2 d-block mb-2"></i>
              No categories found. Create your first category to organize your tasks!
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
